package caixa_rapido_refatorado_yuri_duarte;

/**
 *
 * @author Aluno
 */
public class ServicoCambio {
    double cotacao;
    public ServicoCambio(double cotacao){
        this.cotacao=cotacao;
    }
    public double custoEmReais(double qtdUsd){
        return qtdUsd*cotacao;
    }
}
